<policies>
  <inbound>
    <base />
    <return-response>
      <set-status code="204" />
      <set-header name="Content-Type" exists-action="override">
        <value>application/json</value>
      </set-header>
      <set-body>@{
          return new JObject(new JProperty("message", "List Updated")).ToString();
        }</set-body>
    </return-response>
  </inbound>
  <backend>
    <base />
  </backend>
  <outbound>
    <base />
  </outbound>
  <on-error>
    <base />
  </on-error>
</policies>
